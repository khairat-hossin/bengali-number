{
  "name": "khairat/bengali-number",
  "description": "Convert numbers to Bengali words with support for integers, decimals, and currencies",
  "type": "library",
  "keywords": ["laravel", "bengali", "number", "converter", "bangla"],
  "license": "MIT",
  "authors": [
      {
          "name": "Khairat",
          "email": "khairat564@gmail.com"
      }
  ],
  "require": {
      "php": "^8.0",
      "illuminate/support": "^9.0|^10.0"
  },
  "require-dev": {
      "orchestra/testbench": "^7.0|^8.0",
      "phpunit/phpunit": "^9.6"
  },
  "autoload": {
      "psr-4": {
          "Khairat\\BengaliNumber\\": "src/"
      }
  },
  "autoload-dev": {
      "psr-4": {
          "Khairat\\BengaliNumber\\Tests\\": "tests/"
      }
  },
  "extra": {
      "laravel": {
          "providers": [
              "Khairat\\BengaliNumber\\Providers\\BengaliNumberServiceProvider"
          ],
          "aliases": {
              "BengaliNumber": "Khairat\\BengaliNumber\\Facades\\BengaliNumber"
          }
      }
  },
  "scripts": {
      "test": "vendor/bin/phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
